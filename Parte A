// Librerias
#include <Arduino.h>
#include <stdint.h>

// Definiciones
#define led1 13
#define led2 12
#define led3 14
#define led4 27
#define butSumar 18
#define butRestar 5
#define butCambio 19

enum estado { s0, s1, s2, s3, s4};

// Variables globales
uint8_t contador = 0;
uint8_t tiempoAnteriorSumar = 0;
uint8_t tiempoAnteriorRestar = 0;
uint8_t tiempoRebote = 200; // 200 ms para antirebote

void actualizarLeds(uint8_t estados) {
  switch (estados) {
    case s0:
      digitalWrite(led1, LOW);
      digitalWrite(led2, LOW);
      digitalWrite(led3, LOW);
      digitalWrite(led4, LOW);
      break;
    case s1:
      digitalWrite(led1, HIGH);
      break;
    case s2:
      digitalWrite(led1, HIGH);
      digitalWrite(led2, HIGH);
      break;
    case s3:
      digitalWrite(led1, HIGH);
      digitalWrite(led2, HIGH);
      digitalWrite(led3, HIGH);
      break;
    case s4:
      digitalWrite(led1, HIGH);
      digitalWrite(led2, HIGH);
      digitalWrite(led3, HIGH);
      digitalWrite(led4, HIGH);
      break;
  }
}

void setup() {
  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(led3, OUTPUT);
  pinMode(led4, OUTPUT);

  pinMode(butSumar, INPUT);
  pinMode(butRestar, INPUT);
  pinMode(butCambio, INPUT);
  actualizarLeds(contador);
}

void loop() {
  uint tiempoActual = millis();

  // Botón Sumar
  if (digitalRead(butSumar) == LOW && (tiempoActual - tiempoAnteriorSumar > tiempoRebote)) {
    tiempoAnteriorSumar = tiempoActual;
    contador++;
    if (contador > 4) contador = 0;
    actualizarLeds(contador);
  }

  // Botón Restar
  if (digitalRead(butRestar) == LOW && (tiempoActual - tiempoAnteriorRestar > tiempoRebote)) {
    tiempoAnteriorRestar = tiempoActual;
    contador--;
    if (contador < 0) contador = 4;
    actualizarLeds(contador);
  }
}
